{
  "name": "freetheweb",
  "version": "1.0.0",
  "description": "A manifesto site to free the web from SPA shackles and return to hypermedia",
  "type": "module",
  "scripts": {
    "dev": "tailwindcss -i src/styles.css -o public/styles.css --watch --minify & wrangler dev",
    "build:css": "tailwindcss -i src/styles.css -o public/styles.css --minify",
    "build": "bun run build:css",
    "deploy": "bun run build && wrangler deploy",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.11.9"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260210.0",
    "@tailwindcss/cli": "^4.1.18",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "wrangler": "^4.64.0"
  }
}
